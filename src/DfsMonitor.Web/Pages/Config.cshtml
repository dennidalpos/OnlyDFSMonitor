<html><head><title>DFS Monitor Config</title></head><body><h1>Configuration</h1><p>Edits are persisted to UNC config via API.</p>
<textarea id="cfg" style="width:100%;height:60vh"></textarea><br/><button onclick="save()">Save</button> <a href="/">Back</a>
<script>
async function load(){const r=await fetch('/api/config');document.getElementById('cfg').value=JSON.stringify(await r.json(),null,2);}load();
async function save(){const payload=JSON.parse(document.getElementById('cfg').value);const r=await fetch('/api/config',{method:'PUT',headers:{'content-type':'application/json'},body:JSON.stringify(payload)});alert(r.ok?'Saved':'Save failed');}
</script></body></html>
