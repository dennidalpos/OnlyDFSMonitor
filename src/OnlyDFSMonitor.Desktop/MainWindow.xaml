<Window x:Class="OnlyDFSMonitor.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OnlyDFSMonitor" Height="560" Width="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Width="130" Margin="0,0,8,0" Click="InstallService_Click">Install Service</Button>
            <Button Width="90" Margin="0,0,8,0" Click="StartService_Click">Start</Button>
            <Button Width="90" Margin="0,0,8,0" Click="StopService_Click">Stop</Button>
            <Button Width="130" Margin="0,0,8,0" Click="CollectNow_Click">Collect Now</Button>
            <Button Width="150" Click="SaveConfiguration_Click">Save Configuration</Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Configuration" Margin="0,0,8,0">
                <StackPanel Margin="8">
                    <TextBlock Text="Config path"/>
                    <TextBox x:Name="ConfigPathBox" Text="C:\OnlyDFSMonitor\config\config.json" Margin="0,0,0,8"/>
                    <TextBlock Text="Snapshot path"/>
                    <TextBox x:Name="SnapshotPathBox" Text="C:\OnlyDFSMonitor\status\latest.json" Margin="0,0,0,8"/>
                    <TextBlock Text="UNC root (optional)"/>
                    <TextBox x:Name="UncRootBox" Text="\\fileserver\dfs-monitor" Margin="0,0,0,8"/>
                    <TextBlock Text="DFS Namespaces (one per line)"/>
                    <TextBox x:Name="NamespacesBox" AcceptsReturn="True" Height="120" Text="\\domain.local\dfs\Public" Margin="0,0,0,8"/>
                    <TextBlock Text="DFS-R Groups (one per line)"/>
                    <TextBox x:Name="GroupsBox" AcceptsReturn="True" Height="100" Text="RG-HeadOffice"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Status" Grid.Column="1">
                <TextBox x:Name="LogBox" Margin="8" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </Grid>

        <TextBlock x:Name="FooterText" Grid.Row="2" Margin="0,8,0,0" Text="Ready"/>
    </Grid>
</Window>
